@{
}

@model IEnumerable<SPYte.Models.ApplicationUser>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Người dùng</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedDate)
                </td>
                <td>
                    @{
                        if(item.Status == 2){
                            <a class="btn btn-danger" href="#">Banned</a>
                        }
                        else
                        {
                            <a class="btn btn-success" href="#">Not Banned</a>
                        }
                    }
                    
                </td>
                <td>
                    <a asp-action="Ban" asp-route-id="@item.Id">Ban | </a>
                    <a asp-action="UnBan" asp-route-id="@item.Id">UnBan</a>
                </td>
            </tr>
        }
    </tbody>
</table>
