@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "List Role";
}
<h3>
    All role
</h3>

@if (Model.Any())
{
    <a class="btn btn-primary mb-3" style="width:auto" href='/Admin/Administrator/CreateRole'>
        Create Role
    </a>
    foreach (var role in Model)
    {

        <div class="card mb-3">
            <div class="card-header">
                Role Id: @role.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@role.Name</h5>
            </div>
            <div class="card-footer">
                <a asp-area="Admin" asp-controller="Administrator" asp-action="EditRole" asp-route-id="@role.Id" class="btn btn-primary">
                    Edit
                </a>
                <a href="#" class="btn btn-primary">Delete</a>
            </div>
        </div>
    }

}
else
{
    <div class="card">
        <div class="card-header">
            No roles created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create new role
            </h5>
            <a class="btn btn-primary" style="width:auto" href='/Admin/Administrator/CreateRole'>
                Create Role
            </a>
        </div>
    </div>
}
